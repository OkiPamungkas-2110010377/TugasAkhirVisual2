unit TblHubungan;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, DB, ZAbstractRODataset, ZAbstractDataset, ZDataset,
  ZAbstractConnection, ZConnection, Grids, DBGrids, StdCtrls;

type
  TForm8 = class(TForm)
    l1: TLabel;
    l2: TLabel;
    l3: TLabel;
    l4: TLabel;
    l5: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    c1: TComboBox;
    c2: TComboBox;
    Edit3: TEdit;
    b1: TButton;
    b2: TButton;
    b3: TButton;
    b4: TButton;
    b5: TButton;
    b6: TButton;
    dg1: TDBGrid;
    con1: TZConnection;
    zqry1: TZQuery;
    ds1: TDataSource;
    zqry2: TZQuery;
    zqry3: TZQuery;
    procedure posisiawal;
    procedure editenable;
    procedure editbersih;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form8: TForm8;

implementation

{$R *.dfm}

procedure TForm8.posisiawal;
begin
editbersih;

c1.Enabled:= false;
c2.Enabled:= false;
edit1.Enabled:= false;
edit2.Enabled:= false;
edit3.Enabled:= false;


b1.Enabled:= True;
b2.Enabled:= False;
b3.Enabled:= False;
b4.Enabled:= False;
b5.Enabled:= False;
end;

procedure TForm8.editenable;
begin
c1.Enabled:= True;
c2.Enabled:= True;
edit1.Enabled:= True;
edit2.Enabled:= True;
edit3.Enabled:= True;
end;

procedure TForm8.editbersih;
begin
c1.text:= '';
c2.text:= '';
Edit1.Clear;
Edit2.Clear;
Edit3.Clear;
end;

end.
